<h1>Create New Tax Job</h1>

<%= form_with(model: @job, local: true) do |form| %>
  <% if @job.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
        <% @job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :entity_type %>
    <%= form.select :entity_type, FormsRepository.new.available_entity_types %>
  </div>

  <div class="field">
    <%= form.label :coverage_start_date %>
    <%= form.date_field :coverage_start_date %>
  </div>

  <div class="field">
    <%= form.label :coverage_end_date %>
    <%= form.date_field :coverage_end_date %>
  </div>

  <div class="actions">
    <%= form.submit "Create Job" %>
    <%= link_to 'Cancel', jobs_path %>
  </div>
<% end %>